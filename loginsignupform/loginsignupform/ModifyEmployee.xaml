<Window x:Class="loginsignupform.ModifyEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginsignupform"
        mc:Ignorable="d"
        Title="ModifyEmployee" Height="500" Width="500" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Edit Employee" HorizontalAlignment="center" Foreground="#6366F1" FontSize="22" Margin="0 0 0 20"/>

        <TextBlock Text="Name" FontSize="17" Width="320"/>
        <TextBox x:Name="txtName" Style="{StaticResource OutlinedTextBox}" Width="320"/>

        <TextBlock Text="Email" FontSize="17" Width="320" Margin="0 12 0 0"/>
        <TextBox x:Name="txtEmail" Style="{StaticResource OutlinedTextBox}" Width="320"/>

        <TextBlock Text="Number" FontSize="17" Width="320" Margin="0 12 0 0"/>
        <TextBox x:Name="txtNumber" Style="{StaticResource OutlinedTextBox}" Width="320" MaxLength="11" PreviewTextInput="NumberOnly" DataObject.Pasting="txtNumber_Pasting" />

        <TextBlock Text="Designation" FontSize="17" Width="320" Margin="0 12 0 0"/>
        <TextBox x:Name="txtDesignation" Style="{StaticResource OutlinedTextBox}" Width="320"/>

        <TextBlock Text="Department" FontSize="17" Width="320" Margin="0 12 0 0"/>
        <TextBox x:Name="txtDepartment" Style="{StaticResource OutlinedTextBox}" Width="320"/>

        <Button Content="Update" Style="{StaticResource BlueButtonStyle}" Margin="12" Width="100" Height="25" HorizontalAlignment="Center" Click="Update_Click"/>

    </StackPanel>
</Window>