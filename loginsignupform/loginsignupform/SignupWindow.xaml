<Window x:Class="loginsignupform.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginsignupform"
        mc:Ignorable="d"
        Title="SignupWindow" Height="500" Width="500" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="15" Background="White" Padding="20" Margin="20">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Sign up" FontSize="28" FontWeight="Bold" Foreground="#6366F1" HorizontalAlignment="Center" Margin="0 10 0 20"/>

            <TextBlock Text="Username" Width="320" FontSize="14"/>
            <TextBox x:Name="txtRegUsername" Style="{StaticResource OutlinedTextBox}" Width="320"/>

            <TextBlock Text="Email" Width="320" Margin="0 12 0 0"/>
            <TextBox x:Name="txtEmail" Style="{StaticResource OutlinedTextBox}" Width="320"/>

            <TextBlock Text="Password" Width="320" Margin="0 12 0 0"/>
            <PasswordBox x:Name="txtRegPassword" Width="320"/>

            <TextBlock Text="Confirm Password" Width="320" Margin="0 12 0 0"/>
            <PasswordBox x:Name="txtConfirmPassword" Width="320" Margin="0 0 0 12"/>



            <Button Content="Sign Up" Style="{StaticResource PurpleButtonStyle}" Width="100" Height="30" Click="Register_Click"/>

            <TextBlock HorizontalAlignment="Center" Margin="0 15 0 0">
                Already have an account?
                <Hyperlink Click="GoToLogin">Login</Hyperlink>
            </TextBlock>

        </StackPanel>

    </Border>
</Window>