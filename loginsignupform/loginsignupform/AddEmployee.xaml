<Window x:Class="loginsignupform.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginsignupform"
        mc:Ignorable="d"
        Title="AddEmployee" Height="500" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Background="White">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Employee Details" FontSize="18" FontWeight="Thin"  FontFamily="Arial" Width="275"/>
        <TextBlock Text="Name" Margin="0,12,0,0" FontSize="17" FontWeight="Medium" Foreground="Black"/>
        <TextBox x:Name="txtName" Style="{StaticResource OutlinedTextBox}"/>

        <TextBlock Text="Email" Margin="0,12,0,0" FontSize="17" FontWeight="Medium" Foreground="Black"/>
        <TextBox x:Name="txtEmail" Style="{StaticResource OutlinedTextBox}"/>

        <TextBlock Text="Number" Margin="0,12,0,0" FontSize="17" FontWeight="Medium" Foreground="Black"/>
        <TextBox x:Name="txtNumber" MaxLength="10" Style="{StaticResource OutlinedTextBox}" PreviewTextInput="NumberOnly"/>

        <TextBlock Text="Designation" Margin="0,12,0,0" FontSize="17" FontWeight="Medium" Foreground="Black"/>
        <TextBox x:Name="txtDesignation" Style="{StaticResource OutlinedTextBox}"/>

        <TextBlock Text="Department" Margin="0,12,0,0" FontSize="17" FontWeight="Medium" Foreground="Black"/>
        <TextBox x:Name="txtDepartment" Style="{StaticResource OutlinedTextBox}"/>

        <Button Content="Submit" Style="{StaticResource PurpleButtonStyle}" Width="100" Height="30"  Margin="0,20,0,0" HorizontalAlignment="Center" Click="Submit_Click"/>

    </StackPanel>
</Window>
