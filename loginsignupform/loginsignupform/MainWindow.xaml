<Window x:Class="loginsignupform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginsignupform"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" WindowStartupLocation="CenterScreen">    
    <Border CornerRadius="15" Background="White" Padding="20" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="28" FontWeight="Bold" Foreground="#6366F1" HorizontalAlignment="Center" Margin="0 10 0 20"/>
            <TextBlock Text="Username" Width="320"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource OutlinedTextBox}" Width="320"/>
            <TextBlock Text="Email" Width="320" Margin="0 12 0 0"/>
            <TextBox x:Name="txtEmail" Style="{StaticResource OutlinedTextBox}" Width="320"/>
            <TextBlock Text="Password" Width="320" Margin="0 12 0 0"/>
            <PasswordBox x:Name="txtPassword"  Width="320" />
            <Button Content="LOGIN" Style="{StaticResource PurpleButtonStyle}" Margin="0,12,0,0" Width="100" Height="30" Click="Login_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0 15 0 0"> Not a User? <Hyperlink Click="GoToRegister">Register</Hyperlink></TextBlock>
        </StackPanel>
    </Border>
</Window>